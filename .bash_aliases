# Configuration files
alias vb='vim ~/.bashrc'
alias sb='source ~/.bashrc'
alias vba='vim ~/.bash_aliases'

alias vc='vim ~/.vimrc'

# File System Navigation
alias ll='ls -lhXv'
alias la='ls -A'
alias lla='ll -A'
alias l='ll'

alias ppd='popd'
alias pd=pushd $1
alias bd='cd -'
alias ..='cd ..'

alias c='clear'
alias x='exit'

alias mkdir='mkdir -m u=rwx,g=r,o=r'


# # runnables
alias py='python'
alias py3='python3'
alias mk='make'
alias km='make'
alias vs='vim -S'


# # git
alias gs='git status'
alias gl='git log'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gd='git diff'
alias gf='git fetch origin'

