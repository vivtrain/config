{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "python",
          "style": "plain",
          "template": "({{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }})",
          "properties": {
            "fetch_version": false
          },
          "foreground": "white"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "\u256d\u2500 ",
          "foreground": "#c9cccd"
        },
        {
          "type": "session",
          "style": "plain",
          "template": "<49>\uf007 {{ .UserName }}</> <d><#73a7a7>in</></d> "
        },
        {
          "type": "path",
          "style": "plain",
          "template": "\ue5ff {{ .Path }} ",
          "properties": {
            "style": "full"
          },
          "foreground": "12"
        },
        {
          "type": "git",
          "style": "diamond",
          "template": "<#73a7a7>::</> {{ .UpstreamIcon }} {{ .HEAD }}{{ if .Staging.Changed }}<22> \uf046 {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} <#73a7a7>|{{ end }}{{ if .Working.Changed }}<203> \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true
          },
          "foreground": "198"
        },
        {
          "type": "time",
          "style": "plain",
          "template": "<d>[{{ .CurrentDate | date .Format }}]</d>",
          "foreground": "#73a7a7"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "\u2570\u2500",
          "foreground": "#c9cccd"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "\ue0b0 ",
          "foreground": "255"
        }
      ],
      "newline": false
    }
  ]
}

